button {
	&.form {
		padding: 15px 25px;
		background: $orange;
		text-align: center;
		border: 0;
		border-radius: 6px;
		color: $white;
		font-family: $gotham;
		text-transform: uppercase;
		font-size: 18px;
		margin: 30px auto;
		display: block;
		@include transition(background, .3s);

		&:hover {
			cursor: pointer;
			background: rgba($orange, .8);
			@include transition(background, .3s);
		}
	}
}